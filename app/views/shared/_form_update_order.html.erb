<div class="text-center">
  <%= form_with model: order do |o| %>
    <div class="mb-3">
      <%= o.label :status, class: "form-label", style: "text-transform: capitalize" %>
      <%= o.select :status, Order.statuses.keys.map { |status| [status, status] }, {}, class: "form-select" %>
    </div>

    <div class="mb-3">
      <%= o.label :address, class: "form-label", style: "text-transform: capitalize" %>
      <%= o.text_field :address, class: "form-control", placeholder: "Address" %>
    </div>

    <div class="mb-3">
      <%= o.label :phone_number, class: "form-label", style: "text-transform: capitalize" %>
      <%= o.text_field :phone_number, class: "form-control", placeholder: "Phone Number" %>
    </div>

    <div class="field mb-3">
      <%= o.submit "Update order", class: "btn btn-primary" %>   
    </div>
  <% end %>
</div>