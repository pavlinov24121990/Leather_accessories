<%= form_with(model: CartItem.new, url: cart_items_path(product_id: product.id), method: :post) do |form| %>
  <%= form.number_field :quantity, value: 1, min: 1, max: 5 %>
  <%= form.hidden_field :product_id, value: product.id %>
  <%= form.submit "Buy product", class: "btn btn-primary mb-3" %>
<% end %>